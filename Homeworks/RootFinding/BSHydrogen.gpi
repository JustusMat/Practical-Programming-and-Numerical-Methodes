set term svg background rgb "white"
set output "BSHydrogen.svg"
set tics in
set key top left

set xlabel "r" font ",20"
set ylabel "f(r)" font ",20"
set title "Bound State Hydrogen Atom" font ",25"

plot "../data/BSHydrogen.data" every ::1 u 1:3 with lines linetype 1 linecolor "black" linewidth 1 title "Minimised sol.", \
    x*exp(-x) with lines linetype 1 linecolor "red" linewidth 1 title "Analytical solution"
    
 